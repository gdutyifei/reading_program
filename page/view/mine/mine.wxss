/* page/view/mine/mine.wxss */

page {
  color: #000;
  font-family: "微软雅黑";
  font-size: 24rpx;
}
.userInfo {
  padding: 0 20rpx;
  width: 100%;
}
.userInfo, .part-userInfo {
  display: flex;
  align-items: center;
  height: 198rpx;
  line-height: 198rpx;
  background-color: #FFF;
}

.part-userInfo {
  width: 90%
}

.userInfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.userInfo-nickName {
  color: #aaa;
}

.arrow {
  width: 16rpx;
  height: 26rpx;
  margin-right: 30rpx;
}

.ul-list {
  background-color: #FFF;
  margin-top: 10rpx;
}

.li-item {
  border-bottom: 1rpx solid #E5E5E5;
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
}

.item-text {
  color: #666;
  width: 90%;
}