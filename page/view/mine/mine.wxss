/* page/view/mine/mine.wxss */

page {
  color: #000;
  font-family: "微软雅黑";
  font-size: 24rpx;
}

.userInfo {
  display: flex;
  align-items: center;
  width: 100%;
  height: 198rpx;
  line-height: 198rpx;
  background-color: #FFF;
}

.userInfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.userInfo-nickName {
  color: #aaa;
  width: 80%;
}

.arrow {
  width: 16rpx;
  height: 26rpx;
  margin-right: 30rpx;
}