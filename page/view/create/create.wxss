.form-data text {
  margin: 30rpx 40rpx;
  color: #5C5C5C;
  font-size: 28rpx;
}
.form-data > input, .date-result {
  height:88rpx;
  line-height:88rpx;
  color:#5c5c5c;
  background-color:#fff;
  width:100%;
  font-size:26rpx;
  vertical-align:middle;
  /* padding-left:40rpx; */
  margin: 15rpx 0;
}
checkbox-group {
  padding-left:40rpx;
}
radio-group {
  padding: 0 40rpx;
}

label {
  display: inline-block;
  font-size:26rpx;
  color:#5c5c5c;
  margin: 10rpx;
}

.create-btn button {
  text-align: center;
  background-color: #62b900;
  width: 40%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx auto;
  color: #FFF;
  border-radius: 10rpx;
  font-size:26rpx;
}